{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
